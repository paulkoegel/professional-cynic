.l-content-container
  %header.l-header
    %h1.main-title Professional Cynic
    %nav.l-navigation
      %ul
        %li= link_to 'Photos', '#'
        %li= link_to 'Blog', '#'
        %li= link_to 'About', '#'
        %li= link_to 'Contact', '#'
    - if current_user
      .right
        = link_to current_user.email, logout_path

  .m-gallery-wrapper
    .image_large--caption
      = Gallery.first.images.first.title

    .large-images-wrapper
      - Gallery.first.images.order("file_name ASC").each_with_index do |image, index|
        - if image.width && image.height
          .image_large-wrapper
            .image_large{:style => "background-image: url(#{image.url}); background-size: #{image.width > image.height ? 'cover' : 'contain'}", :data => {:caption => image.title}}
