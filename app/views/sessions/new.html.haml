= form_tag sessions_path, :class => 'form form-horizontal' do
  .control-group
    = label_tag :email, nil, :class => 'control-label'
    .controls
      = text_field_tag :email, @email, :autofocus => 'autofocus'
  .control-group
    = label_tag :password, nil, :class => 'control-label'
    .controls
      = password_field_tag :password
  .control-group
    .controls
      = label_tag :remember_me do
        = check_box_tag :remember_me
        Remember me
      = submit_tag 'Log in', :class => 'btn-primary btn-large'
      %br
      %br
      %br
      = link_to 'Reset password', new_password_reset_path, :class => 'password-reset'
